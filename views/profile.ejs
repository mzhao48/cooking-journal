<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-3 justify-content-center">
      <div class="col-6">
        <div class="row justify-content-center mt-5">
          <div>
            <a href="/logout" class="col-3 btn btn-primary">Logout</a>
            <a class="btn btn-primary col-3" href="/feed">Return to Feed</a>
            <h3 class="mt-5">Welcome <%= user.userName %></h3>
            <h6>Here are your recipes:</h6>
          </div>
        </div>  
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>